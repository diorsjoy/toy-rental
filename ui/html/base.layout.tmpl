{{define "base"}}
 <!doctype html>
 <html lang='en'>
    <head>
        <meta charset='utf-8'>
        <title>{{template "title" .}} - Home</title>
        <link rel='stylesheet' href='/static/css/main.css'>
        <link rel='shortcut icon' href='/static/img/logoFavicon.png' type='image/x-icon'>
        <link rel='stylesheet' href='https://fonts.googleapis.com/css?family=Ubuntu+Mono:400,700'>
    </head>
    <body>
        <header>
            <h1>
                <img src="/static/img/logoFullHD.png" alt="AITU logo">
                <a href='/'>Astana IT University</a>
            </h1>
        </header>
        <nav>
        <div class="navbar">
            <a href='/'>Articles</a>
            {{if .IsTeacher}}
            <div class="dropdown">
                <button class="dropbtn">Create</button>
                <div class="dropdown-content">
                    <a href='/snippet/create'>Create article</a>
                    <a href='/department/create'>Create a Department</a>
                </div>
            </div>
            {{end}}
            {{if .IsAuthenticated}}
            <div class="dropdown">
                <button class="dropbtn">Information</button>
                <div class="dropdown-content">
                    <a href='/students'>Students</a>
                    <a href='/department'>Departments</a>
                </div>
            </div>
            {{end}}
        </div>
        <div>
            {{if .IsAuthenticated}}
            <form action='/user/logout' method='POST'>
                <input type='hidden' name='csrf_token' value='{{.CSRFToken}}'>
                <button>Logout</button>
            </form>
            {{else}}
                <a href='/user/signup'>Sign Up</a>
                <a href='/user/login'>Login</a>
            {{end}}
        </div>
            <div>
                {{if .IsAdmin}}
                <a href='/admin'>Admin</a>
                {{end}}
            </div>
        </nav>
        <main>
            {{with .Flash}}
            <div class='flash'>{{.}}</div>
            {{end}}
            {{template "main" .}}
        </main>
        {{template "footer" .}}
        <script src="/static/js/main.js" type="text/javascript"></script>
    </body>
 </html>
 {{end}}
